?package(cairo-dock):\
	needs="X11"\
	section="Applications/System"\
	hints="dock"\
	title="Cairo-Dock without OpenGL"\
	icon="/usr/share/pixmaps/cairo-dock.svg"\
	command="/usr/bin/cairo-dock -c"

?package(cairo-dock):\
	needs="X11"\
	section="Applications/System"\
	hints="dock"\
	title="Cairo-Dock with OpenGL"\
	icon="/usr/share/pixmaps/cairo-dock.svg"\
	command="/usr/bin/cairo-dock -o"

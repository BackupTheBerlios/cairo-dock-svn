rm -f /tmp/cpusage
#Et un troisieme script de la mort...
cat /proc/stat | grep cpu | sed -e "s/ /_/g" -e "s/cpu__*\([0-9][0-9]*\)__*\([0-9][0-9]*\)__*\([0-9][0-9]*\)__*\([0-9][0-9]*\).*/\1>\2>\3>\4/" -e "s/cpu\([0-9][0-9]*\)__*\([0-9][0-9]*\)__*\([0-9][0-9]*\)__*\([0-9][0-9]*\)__*\([0-9][0-9]*\).*/\1>\2>\3>\4>\5/" > /tmp/cpusage
echo stop >> /tmp/cpusage


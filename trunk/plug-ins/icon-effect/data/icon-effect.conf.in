#!en;@VERSION_ICON_EFFECTS@

#[gtk-preferences]
[Global]

#F-[when hovering an icon]
frame_hov =

#r4[Fire;Stars;Rain;Snow;Storm] Effects used :
effects = 0

#F-[when clicking on an launcher]
frame_lau =

#r4[Fire;Stars;Rain;Snow;Storm] Effects used on launcher :
click launchers = 1

#F-[when clicking on an appli]
frame_appli =

#r4[Fire;Stars;Rain;Snow;Storm] Effects used on applis :
click applis = 2

#F-[when clicking on an applet]
frame_applet =

#r4[Fire;Stars;Rain;Snow;Storm] Effects used on applets :
click applets = 3

#v
sep =

#b Draw in background ?
background = false

#b Rotate effects with dock ?
rotate = false

#[@icon_effectsdatadir@/icon-fire.svg]
[Fire]

#I[0;5000] Duration of the animation :
#{In ms. Set 0 to not use this effect.}
duration = 1000

#b Repeat while icon is pointed ?
continue = false

#c+3 1st color of gradation :
color1 = 1;0.12;0

#c+3 2nd color of gradation :
color2 = 1;.95;0

#b+ Random colors ?
mystical = false

#b+ Add luminance ?
#{It will slightly alter the colors, so you may have to modify them.}
luminous = true


#I[10;500] Number of particles :
nb part = 150

#I[10;60] Particle size :
part size = 32

#e[1;10] Particle speed :
part speed = 3.


#[@icon_effectsdatadir@/star.png]
[Stars]

#I[0;5000] Duration of the animation :
#{In ms. Set 0 to not use this effect.}
duration = 2000

#b Repeat while icon is pointed ?
continue = true

#c+3 1st color of gradation :
color1 = 1;1;.7

#c+3 2nd color of gradation :
color2 = .9;.9;.9

#b+ Random colors ?
mystical = false

#I[10;300] Number of particles :
nb part = 35

#I[10;90] Particle size :
part size = 50


#[@icon_effectsdatadir@/snow.png]
[Snow]

#I[0;5000] Duration of the animation :
#{In ms. Set 0 to not use this effect.}
duration = 2000

#b Repeat while icon is pointed ?
continue = false

#c+3 1st color of gradation :
color1 = 1.;1.;1.

#c+3 2nd color of gradation :
color2 = .8;.9;.9

#I[10;300] Number of particles :
nb part = 50

#I[2;40] Particle size :
part size = 26

#e[.5;3] Particle speed :
part speed = 1.5


#[@icon_effectsdatadir@/rain.png]
[Rain]

#I[0;5000] Duration of the animation :
#{In ms. Set 0 to not use this effect.}
duration = 2000

#b Repeat while icon is pointed ?
continue = true

#c+3 1st color of gradation :
color1 = .5;.9;1.

#c+3 2nd color of gradation :
color2 = .9;.9;.9

#I[10;300] Number of particles :
nb part = 100

#I[2;30] Particle size :
part size = 20

#e[2;20] Particle speed :
part speed = 8


#[@icon_effectsdatadir@/icon-storm.png]
[Storm]

#I[0;8000] Duration of the animation :
#{In ms. Set 0 to not use this effect.}
duration = 4000

#b Repeat while icon is pointed ?
continue = true

#c+3 1st color of gradation :
color1 = .6;.6;.6

#c+3 2nd color of gradation :
color2 = .0;.4;.6

#I[10;400] Number of particles :
nb part = 200

#I[2;40] Particle size :
part size = 20

#!en;@VERSION_ILLUSION@

#[gtk-preference]
[Global]

#r+[Evaporate;Fade out;Explode;Break] Animation on disappearance :
disappearance = 0


#[@illusiondatadir@/icon-evaporate.svg]
[Evaporate]

#I[0;5000] Duration of the animation :
duration = 1000

#c+3 1st color of gradation :
color1 = 0;0;1

#c+3 2nd color of gradation :
color2 = 0;1;0

#b+ Random colors ?
mystical = false

#I[10;500] Number of particles :
nb part = 150

#I[5;40] Particle size :
part size = 10

#e[0;10] Particle speed :
part speed = 3.5

#b+ Evaporate upward ?
from bottom = true


#[@illusiondatadir@/icon-fade-out.svg]
[Fade out]

#I[0;5000] Duration of the animation :
duration = 1000


#[@illusiondatadir@/icon-explode.svg]
[Explode]

#I[0;5000] Duration of the animation :
duration = 800

#i[4;100] Number of pieces :
nb pieces = 49

#e[1;10] Explosion radius :
radius = 1

#b Break the icon in cubes ?
cubes = true


#[@illusiondatadir@/icon-break.svg]
[Break]

#I[0;2000] Duration of the animation :
duration = 650

#i[5;21] Number of pieces :
nb pieces = 11
